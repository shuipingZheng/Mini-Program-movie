/* pages/movie-video/movie-video.wxss */
.videoCtl{
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 9999;
}
.videos-list-box{
  width: 100%;
  height: calc(100% - 230px);
  top:240px;
  position:fixed;
  overflow:auto;
}
.videos{
  padding: 5rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #dedede;
  display: flex;
  flex-direction: row;
  justify-content: space-between;

}
.title{
  font-size: 36rpx;
  color: #000;
}
.average{
  color: #ffc53a;
  font-size: 32rpx;
  margin-left: 5rpx;
}
.tickets{
  display: flex;
  flex-direction: row;
  align-items:center;
  width: 120rpx;
  text-align: right;
}
.tickets text{
  background: #ea2000;
  color: #fff;
  padding: 10rpx 20rpx;
}

.video-list{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #dedede;
  
}
.video-list-pic{
  max-width: 270rpx;
  height: 180rpx;
  position: relative;
}
.video-list-img{
  width: 270rpx;
  height: 180rpx;

}
.video-list-current{
  position: absolute;
  width: 100rpx;
  left: 10rpx;
  bottom: 20rpx;
  color: #fff;
}
.video-list-icon{
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  right: 10rpx;
  bottom: 20rpx;
}

.video-list-content{
  width: 100%;
  padding-left: 30rpx;
}

.video-list-title{
  color: #000;
  font-size: 32rpx;
}